<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_one"
    tools:context=".QuestionsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">
        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@color/white"
            tools:text = "Platypuses belong to class of:"/>

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:layout_marginTop="15dp"
            android:contentDescription="Quiz Image"
            tools:src="@drawable/platypuses" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            >
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="0dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="10"
                android:indeterminate="false"
                android:progressTint="@color/white"
                android:minHeight="50dp"
                android:progress="0"/>
            <TextView
                android:id="@+id/tv_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:textSize="14sp"
                android:textColor="@color/white"
                tools:text="0/10"/>

        </LinearLayout>

        <TextView
            android:id="@+id/qa_option_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_background"
            android:layout_gravity="center"
            android:padding="15dp"
            android:textColor="@color/default_text"
            android:textSize="18sp"
            tools:text="yeti"/>

        <TextView
            android:id="@+id/qa_option_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_background"
            android:layout_gravity="center"
            android:padding="15dp"
            android:textColor="@color/default_text"
            android:textSize="18sp"
            tools:text="yeti"/>

        <TextView
            android:id="@+id/qa_option_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_background"
            android:layout_gravity="center"
            android:padding="15dp"
            android:textColor="@color/default_text"
            android:textSize="18sp"
            tools:text="yeti"/>

        <TextView
            android:id="@+id/qa_option_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/default_option_background"
            android:layout_gravity="center"
            android:padding="15dp"
            android:textColor="@color/default_text"
            android:textSize="18sp"
            tools:text="yeti"/>

        <Button
            android:id="@+id/qa_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/blue_three"
            android:text="@string/submit_button"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </LinearLayout>

</ScrollView>
